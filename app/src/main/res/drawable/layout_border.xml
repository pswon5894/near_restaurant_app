<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 배경 색 -->
    <solid android:color="@color/white" />

    <!-- 테두리(Stroke) -->
    <stroke
        android:width="2dp"
        android:color="@color/black" />

    <!-- 모서리 둥글게 -->
    <corners android:radius="12dp" />

    <!-- 여백(선택) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
