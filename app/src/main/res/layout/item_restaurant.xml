<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/layout_border">



    <ImageView
        android:id="@+id/iv_restaurant_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="Restaurant Photo"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_restaurant_name"
        android:layout_width="270dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="258dp"
        android:gravity="start"
        android:text="식당 이름"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/iv_restaurant_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_restaurant_address"
        android:layout_width="301dp"
        android:layout_height="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="258dp"
        android:layout_marginBottom="7dp"
        android:gravity="start"
        android:text="식당 주소"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toEndOf="@+id/iv_restaurant_photo" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:text="별점"
        app:layout_constraintBottom_toTopOf="@+id/tv_restaurant_address"
        app:layout_constraintStart_toEndOf="@+id/iv_restaurant_photo"
        app:layout_constraintTop_toBottomOf="@+id/tv_restaurant_name" />

    <TextView
        android:id="@+id/tv_food_type"
        android:layout_width="150dp"
        android:layout_height="21dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="8dp"
        android:text="음식 종류"
        app:layout_constraintBottom_toTopOf="@+id/tv_restaurant_address"
        app:layout_constraintStart_toEndOf="@+id/tv_rating"
        app:layout_constraintTop_toBottomOf="@+id/tv_restaurant_name" />
</androidx.constraintlayout.widget.ConstraintLayout>